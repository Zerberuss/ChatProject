<!DOCTYPE html>
<html >
  <head>
    <meta charset="UTF-8">
    <title>Fluzza</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel='stylesheet prefetch' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'>
  </head>
  <body>
    <div class="container clearfix">
      <div class="chat">
        <div class="chat-header clearfix">
          <img src="<%= user.picture %>" alt="avatar">
          <div class="chat-about">
            <div class="chat-room"><%= room.title %></div>
            <div class="chat-num-users"> User(s)</div>
          </div>
          <i class="fa fa-users"></i>
        </div> <!-- end chat-header -->

        <div class="chat-history">
          <ul>
          </ul>
        </div> <!-- end chat-history -->

        <div class="chat-message clearfix">
          <textarea name="message" placeholder ="Type your message" rows="3"></textarea>
          <input type="file" id="siofu_input" />
          <button type="submit">Send</button>
          <div class="message error" id="clientMessages"><ul class="fa-ul"></ul>
</div>
        </div> <!-- end chat-message -->
      </div> <!-- end chat -->

      <div class="controls">
          <a href="/logout" class="logout-btn">Abmelden</a>
          <a href="/rooms" class="rooms-btn">Zur√ºck</a>
      </div>

      <div class="users-list">
        <ul class="list">
        </ul>
      </div>

      <!--
      <div class="controls">
          <a href="#" class="history-btn full-control" data-id="<%= room._id %>">History</a>
      </div>
      -->

    </div> <!-- end container -->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/siofu/client.js"></script>
    <script src="/js/main.js"></script>
    <script>$(function(){app.chat('<%= room.id %>', '<%= user.username %>')});</script>
  </body>
</html>
